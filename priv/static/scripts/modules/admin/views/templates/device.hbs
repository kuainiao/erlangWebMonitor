<section class="content-header">
    <h1>{{ title }}<small></small></h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i></a></li>
        <li class="active">{{ subTitle }}</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-blue"><i class="ion ion-easel"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">设备总数</span>
                    <span class="info-box-number" id="total_register">0</span>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-red"><i class="ion ion-easel"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">公共设备</span>
                    <span class="info-box-number" id="total_public">0</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">新注册设备</h3>
                    <div class="box-tools pull-right"></div>
                </div>
                <div class="box-body">
                    <div class="chart">
                        <canvas id="dev_register" style="height:250px"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-sm-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">新增公共设备</h3>
                    <div class="box-tools pull-right"></div>
                </div>
                <div class="box-body">
                    <div class="chart">
                        <canvas id="dev_public" style="height:250px"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
